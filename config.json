{
    "settings": {
      "debug": true
    },
    "atoms": [
        {
            "id": "thermometer",
            "input": [
              {
                "mode": "jsonfile",
                "filename": "thermometer.json"
              },
              {
                "mode": "http",
                "pullIntervall": "2000"
              }
            ],
            "output": [
              {
                "mode": "console"
              }
            ],
            "augmentation": [
              {
                  "name": "add additional timestamp",
                  "type": "addField",
                  "parameters": ["additionalTimestamp", "currentTimestamp"]
              }
            ],
            "abstraction": [
              {
                  "name": "remove old timestamp",
                  "type": "removeField",
                  "parameters": ["timestamp"]
              }
            ]
        }
    ]
}
